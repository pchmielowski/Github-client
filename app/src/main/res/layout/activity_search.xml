<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="net.chmielowski.github.screen.SearchViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.chmielowski.github.screen.search.SearchActivity">

        <!--TODO: Revert NestedScrollView-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <ViewSwitcher
                    android:id="@+id/network_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inAnimation="@android:anim/fade_in"
                    android:outAnimation="@android:anim/fade_out"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/offline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorOffline"
                        android:gravity="center"
                        android:text="You are offline"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/online"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorOnline"
                        android:gravity="center"
                        android:text="You are online again!"
                        android:textColor="@android:color/white"/>
                </ViewSwitcher>

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    app:visibility="@{model.inputVisible}"
                    tools:ignore="LabelFor"/>

                <TextView
                    android:id="@+id/searches_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/last_searches"
                    android:textStyle="bold"
                    app:visibility="@{model.searchHistoryVisible}"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/searches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:visibility="@{model.searchHistoryVisible}"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:rotating="@{model.loading}"
            app:srcCompat="@drawable/ic_search"
            app:visibility="@{model.searchVisible}"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>