<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="net.chmielowski.github.screen.SearchViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.chmielowski.github.screen.search.SearchActivity">

        <!--TODO: Revert NestedScrollView-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    app:visibility="@{model.inputVisible}"
                    tools:ignore="LabelFor" />

                <TextView
                    android:id="@+id/searches_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/last_searches"
                    android:textStyle="bold"
                    app:visibility="@{model.searchHistoryVisible}" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/searches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:visibility="@{model.searchHistoryVisible}" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:rotating="@{model.loading}"
            app:srcCompat="@drawable/ic_search"
            app:visibility="@{model.searchVisible}" />

    </android.support.design.widget.CoordinatorLayout>
</layout>